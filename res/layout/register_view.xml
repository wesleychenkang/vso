<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:gravity="center"
    android:orientation="vertical" >

    <include layout="@layout/back_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#efefef"
        android:gravity="center"
        android:text="用户注册"
        android:textColor="#009cff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/login_name_edittext"
                android:layout_width="295dip"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/chargebackgrdpre"
                android:drawableLeft="@drawable/login_user"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/login_pull_down"
                android:hint="请输入账号"
                android:imeOptions="actionNext"
                android:padding="5dip"
                android:singleLine="true" >
            </EditText>

            <EditText
                android:id="@+id/login_pwd_edittext"
                android:layout_width="295dip"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/chargebackgrdpre"
                android:drawableLeft="@drawable/login_key"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/login_edite_delete"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:padding="5dip"
                android:singleLine="true" >
            </EditText>

            <RelativeLayout
                android:layout_width="295dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/login_check_pressed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示密码"
                        android:textColor="#464646" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="295dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/button_blue_normal"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/login_check_pressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="搜游游戏用户服务协议"
                    android:textColor="#037cff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>